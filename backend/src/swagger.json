{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Suporte",
        "version": "1.0.0",
        "description": "Documentação e testes da API do Sistema de Suporte"
    },
    "servers": [
        {
        "url": "http://localhost:3001",
        "description": "Servidor Local"
        }
    ],
    "paths": {
        "/auth/login": {
        "post": {
            "summary": "Faz o login do usuário",
            "tags": ["Autenticação"],
            "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                    "email": {
                        "type": "string",
                        "example": "teste@email.com"
                    },
                    "senha": {
                        "type": "string",
                        "example": "123456"
                    }
                    }
                }
                }
            }
            },
            "responses": {
            "200": {
                "description": "Login realizado com sucesso"
            },
            "400": {
                "description": "Erro nas credenciais"
            },
            "500": {
                "description": "Erro interno do servidor"
            }
            }
        }
        }
    }
}